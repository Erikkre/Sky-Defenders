<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <!-- =======================TOXICGRENADE================================= -->

  <ThingDef ParentName="BaseWeapon">
    <defName>Weapon_GrenadeToxic</defName>
    <label>Giftgranate</label>
    <description>Giftgranaten schädigen den Körper auf lange Sicht.</description>
    <graphicData><!--Toxic grenades damaging the body on the long term.-->
      <texPath>Things/Item/Equipment/WeaponRanged/grenades_toxic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractGrenade</soundInteract>
    <techLevel>Spacer</techLevel>
    <statBases>
      <MarketValue>32000</MarketValue>
      <Mass>1.75</Mass>
      <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>GrenadeEMP</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <costList>
      <Component>45</Component>
      <Jade>25</Jade>
      <Uranium>35</Uranium>
      <Plasteel>75</Plasteel>
    </costList>
    <generateCommonality>0.05</generateCommonality>
    <tradeTags>
			<li>Exotic</li>
		</tradeTags>
    <recipeMaker>
      <researchPrerequisite>ToxicWeapons</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <label>Wirf Giftgranate</label>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>25</range>
        <forcedMissRadius>2.5</forcedMissRadius>
        <warmupTime>3.25</warmupTime>
        <noiseRadius>5</noiseRadius>
        <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
        <soundCast>ThrowGrenade</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <projectileDef>Proj_GrenadeToxic</projectileDef>
      </li>
    </verbs>
    <smeltProducts>
      <Steel>10</Steel>
    </smeltProducts>
  </ThingDef>

	<ThingDef ParentName="BaseGrenadeProjectile">
		<defName>Proj_GrenadeToxic</defName>
		<label>Giftgranate</label>
		<thingClass>Projectile_Explosive</thingClass>
		<graphicData>
			<texPath>Things/Projectile/grenade_toxic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<explosionRadius>15</explosionRadius>
			<damageDef>WeaponToxicGrenades</damageDef>
			<damageAmountBase>1</damageAmountBase>
			<explosionDelay>300</explosionDelay>
		</projectile>
	</ThingDef>

</ThingDefs>
