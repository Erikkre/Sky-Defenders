    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bolt</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <armorPenetrationBase>0.2</armorPenetrationBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  
</Defs>


