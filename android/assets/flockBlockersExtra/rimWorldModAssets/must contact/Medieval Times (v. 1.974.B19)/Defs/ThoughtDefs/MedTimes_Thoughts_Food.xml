<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- ======= Non-Food Quality Thoughts ========= -->
<!-- Read Graphic Novel -->  
	<ThoughtDef>
		<defName>MedTimes_GraphicNovel</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/GenericGood</icon>
		<durationDays>1</durationDays>
		<stackLimit>3</stackLimit>	
		<stages>
			<li>
				<label>Read a graphic novel</label>
				<description>I read a graphic novel produced by a local artist. It was really well done, and I enjoyed the story.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>	
		</stages>
	</ThoughtDef>  
  
<!-- ======= Food Quality Thoughts ========= -->
<!-- Hearty Stew -->
  <ThoughtDef>
    <defName>MedTimes_AteHeartyStew</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>ate Hearty Stew</label>
        <description>That Hearty Stew was amazing. It nourished my body and my soul.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
<!-- Weak Stew -->
  <ThoughtDef>
    <defName>MedTimes_AteWeakStew</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>ate Weak Stew</label>
        <description>I ate a Weak Stew, Their wasn't a lot of food in it, but the broth was warm and tasty. I also drank enough of it that I at least feel full now.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
<!-- Cheese -->  
	<ThoughtDef>
		<defName>MedTimes_AteCheese</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>0.5</durationDays>
		<stackLimit>1</stackLimit>	
		<stages>
			<li>
				<label>ate cheese</label>
				<description>I ate some freaking cheese, god how I missed cheese!</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>